<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="presenter"
            type="com.example.newstore.ui.profile.ProfileFragment" />

        <variable
            name="userModel"
            type="com.example.newstore.model.UserM" />

        <variable
            name="img"
            type="com.example.newstore.adapter.BindAdapter" />


    </data>

    <LinearLayout
        android:id="@+id/ll_profile_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            tools:context=".ui.profile.ProfileFragment">


            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_radius_18"
                android:backgroundTint="#54B7C5BE"
                android:orientation="vertical"
                android:padding="12dp"
                tools:ignore="UnknownIdInLayout">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_profile"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:elevation="12dp"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        app:imageUrl="@{userModel.avatar}" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="4dp"
                    android:padding="6dp"
                    android:background="@drawable/rectangle_radius_12"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/user_profile" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/user_icon"
                        android:fontFamily="@font/montblanc_trial_regular"
                        android:text="Name"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_name"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/user_icon"
                        android:fontFamily="@font/montblanc_trial_regular"
                        android:text="@{userModel.name}" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="4dp"
                    android:padding="6dp"
                    android:background="@drawable/rectangle_radius_12"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/email_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/email_profile" />


                    <TextView
                        android:id="@+id/user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/email_icon"
                        android:fontFamily="@font/montblanc_trial_regular"
                        android:text="Email"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_email"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/email_icon"
                        android:fontFamily="@font/montblanc_trial_regular"
                        android:text="@{userModel.email}" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_phone"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="4dp"
                    android:padding="6dp"
                    android:background="@drawable/rectangle_radius_12"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/phone_profile" />


                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/phone_icon"
                        android:fontFamily="@font/montblanc_trial_regular"
                        android:text="Phone"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_phone"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/phone_icon"
                        android:fontFamily="@font/montblanc_trial_regular"
                        android:text="@string/phone" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/rl_phone"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    tools:ignore="UnknownIdInLayout">

                    <ImageView
                        android:id="@+id/edit_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/edit_profile" />

                    <TextView
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/edit_icon"
                        android:fontFamily="@font/montblanc_trial_regular"
                        android:text="Edit Profile"
                        android:textColor="#5A7257" />


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_radius_18"
                android:backgroundTint="#54B7C5BE"
                android:orientation="vertical"
                android:padding="12dp"
                tools:ignore="UnknownIdInLayout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="6dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_radius_12"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/setting_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/setting_profile" />

                    <TextView
                        android:id="@+id/setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/setting_icon"
                        android:fontFamily="@font/montblanc_trial_regular"
                        android:text="Setting"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="6dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_radius_12"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/location_profile" />


                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/location_icon"
                        android:fontFamily="@font/montblanc_trial_regular"
                        android:text="Location"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="6dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_radius_12"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/question_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/question_profile" />


                    <TextView
                        android:id="@+id/question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/question_icon"
                        android:fontFamily="@font/montblanc_trial_regular"
                        android:text="Question"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_phone"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:gravity="center"
                    tools:ignore="UnknownIdInLayout">

                    <ImageView
                        android:id="@+id/exit_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/exit_profile" />

                    <TextView
                        android:id="@+id/sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/exit_icon"
                        android:fontFamily="@font/montblanc_trial_regular"
                        android:text="Sign out"
                        android:textColor="#D7872E2E" />


                </RelativeLayout>

            </LinearLayout>








        </RelativeLayout>
    </LinearLayout>


</layout>