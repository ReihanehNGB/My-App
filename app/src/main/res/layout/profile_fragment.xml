        <variable
            name="userModel"
            type="com.example.newstore.model.UserM" />

        <variable
            name="img"
            type="com.example.newstore.adapter.BindAdapter" />
        <variable
            name="phone"
            type="com.example.newstore.ui.signup.SignUpActivity" />



    </data>

