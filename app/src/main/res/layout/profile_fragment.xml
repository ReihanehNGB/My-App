                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_toEndOf="@+id/phone_icon"
                            android:fontFamily="@font/montblanc_trial_regular"
                            android:text="@string/phone" />


                    </RelativeLayout>

