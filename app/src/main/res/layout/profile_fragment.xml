                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_phone"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/rectangle_radius_12"
